<%# views/events/index-events.ejs %>

<h1>All the events</h1>

<% events.forEach(event => { %>
  <div class="event">
    <h4>
      <a href="<%= `/events/${event.id}` %>">
        <%= event.title %>
      </a>
    </h4>
    <p><%= event.description %></p>
    <h5><%= event.location + ' ' + event._date %>
  </div>
<% }) %>
